---
import '../styles/global.css';

const { title = 'Keeler Tools', description = 'Tiny browser tools for curious people.' } =
    Astro.props;

const siteUrl = 'https://tools.keeler.dev';
const currentUrl = new URL(Astro.url.pathname, siteUrl).toString();
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="description" content={description} />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>

        <!-- Theme Color -->
        <meta name="theme-color" content="#24d1f8" />

        <!-- Favicons -->
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <link rel="apple-touch-icon" href="/favicon.png" />

        <!-- Open Graph -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={currentUrl} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:site_name" content="Keeler Tools" />

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <!-- Privacy-friendly analytics by Plausible -->
        <script async src="https://plausible.io/js/pa-okMc6bM5PAU143FpapTLS.js"></script>
        <script>
            ((window.plausible =
                window.plausible ||
                function () {
                    (plausible.q = plausible.q || []).push(arguments);
                }),
                (plausible.init =
                    plausible.init ||
                    function (i) {
                        plausible.o = i || {};
                    }));
            plausible.init();
        </script>
    </head>
    <body class="min-h-screen bg-background text-slate-900">
        <div class="flex min-h-screen flex-col">
            <slot />
            <footer class="mt-auto border-t border-slate-200 bg-white/70">
                <div
                    class="mx-auto flex max-w-6xl flex-col gap-2 px-6 py-6 text-sm text-slate-600 sm:flex-row sm:items-center sm:justify-between"
                >
                    <p>
                        Built for vibe coding and AI-assisted development — a fun, exploratory
                        playground.
                    </p>
                    <div class="flex flex-wrap items-center gap-4">
                        <a class="font-semibold text-brand-dark hover:text-brand" href="/learnings">
                            Learnings
                        </a>
                        <a
                            class="inline-flex items-center gap-1 font-semibold text-brand-dark hover:text-brand"
                            href="https://github.com/jerkeeler/keeler-tools"
                        >
                            GitHub
                            <span aria-hidden="true" class="text-xs">↗</span>
                        </a>
                        <a
                            class="inline-flex items-center gap-1 font-semibold text-brand-dark hover:text-brand"
                            href="https://keeler.dev"
                        >
                            keeler.dev
                            <span aria-hidden="true" class="text-xs">↗</span>
                        </a>
                    </div>
                </div>
            </footer>
        </div>
    </body>
</html>
