---
import '../styles/global.css';

const { title = 'Keeler Tools', description = 'Tiny browser tools for curious people.' } =
    Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="description" content={description} />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="min-h-screen bg-background text-slate-900">
        <div class="flex min-h-screen flex-col">
            <slot />
            <footer class="mt-auto border-t border-slate-200 bg-white/70">
                <div
                    class="mx-auto flex max-w-6xl flex-col gap-2 px-6 py-6 text-sm text-slate-600 sm:flex-row sm:items-center sm:justify-between"
                >
                    <p>
                        Built for vibe coding and AI-assisted development â€” a fun, exploratory
                        playground.
                    </p>
                    <div class="flex flex-wrap items-center gap-4">
                        <a
                            class="font-semibold text-brand-dark hover:text-brand"
                            href="https://keeler.dev"
                        >
                            keeler.dev
                        </a>
                        <a
                            class="font-semibold text-brand-dark hover:text-brand"
                            href="https://github.com/jerkeeler/keeler-tools"
                        >
                            GitHub
                        </a>
                    </div>
                </div>
            </footer>
        </div>
    </body>
</html>
