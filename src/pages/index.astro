---
import Layout from '../layouts/Layout.astro';
import ToolCard from '../components/ToolCard.astro';
import { tools } from '../data/tools';

const sortedTools = [...tools].sort(
    (a, b) => new Date(b.createdAt).getTime() - new Date(a.createdAt).getTime()
);
---

<Layout
    title="Keeler Tools"
    description="Browser-native utilities built for small daily curiosities."
>
    <main class="relative overflow-hidden">
        <div class="pointer-events-none absolute inset-0" aria-hidden="true">
            <div
                class="absolute -left-16 top-12 h-64 w-64 rounded-full bg-[radial-gradient(circle,rgba(36,209,248,0.12)_0%,transparent_70%)]"
            >
            </div>
            <div
                class="absolute right-8 top-0 h-48 w-48 rounded-full bg-[radial-gradient(circle,rgba(27,150,180,0.12)_0%,transparent_70%)]"
            >
            </div>
            <div
                class="absolute bottom-[-5%] left-[40%] h-56 w-56 rounded-full bg-[radial-gradient(circle,rgba(186,230,254,0.25)_0%,transparent_70%)]"
            >
            </div>
        </div>

        <section class="relative mx-auto flex max-w-6xl flex-col gap-6 px-4 py-16 md:py-20">
            <!-- Hero + Search (side by side on desktop) -->
            <div class="flex flex-col gap-6 md:flex-row md:items-start md:justify-between md:gap-8">
                <div class="max-w-xl">
                    <p class="text-xs font-semibold uppercase tracking-[0.3em] text-brand-dark">
                        Tools.keeler.dev
                    </p>
                    <h1
                        class="mt-3 font-display text-4xl font-semibold leading-[1.15] text-slate-900 sm:text-5xl"
                    >
                        Tiny tools with a clear purpose and a little bit of wonder.
                    </h1>
                    <p class="mt-3 text-base text-slate-700">
                        Browser-only tools built with AI for fun and learning.
                    </p>
                    <div class="mt-3">
                        <a
                            class="text-sm font-semibold text-brand-dark underline decoration-brand-dark/30 underline-offset-4 transition hover:text-brand hover:decoration-brand"
                            href="/learnings"
                        >
                            Read about what I've learned building this â†’
                        </a>
                    </div>
                </div>

                <!-- Search Input -->
                <div class="md:w-80 md:pt-2">
                    <label for="tool-search" class="sr-only">Search tools</label>
                    <input
                        type="text"
                        id="tool-search"
                        placeholder="Search tools..."
                        class="w-full rounded-full border border-slate-200/80 bg-white/80 px-5 py-2.5 text-sm text-slate-900 shadow-sm backdrop-blur-sm transition focus:border-brand focus:bg-white focus:outline-none focus:ring-2 focus:ring-brand/20"
                    />
                </div>
            </div>

            <!-- Tool Grid -->
            <div id="tool-grid" class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
                {sortedTools.map((tool) => <ToolCard tool={tool} />)}
            </div>

            <!-- Empty State -->
            <div
                id="empty-state"
                class="hidden rounded-3xl border border-slate-200/80 bg-white/80 p-12 text-center shadow-sm backdrop-blur-sm"
            >
                <p class="text-base text-slate-600">No tools match that criteria</p>
            </div>
        </section>

        <!-- About Section -->
        <section class="relative mx-auto max-w-6xl px-4 pb-16 pt-8 md:pb-20 md:pt-12">
            <div class="mb-6 border-t border-slate-200/50"></div>

            <div class="grid gap-6 sm:grid-cols-3">
                <div class="space-y-2">
                    <div class="inline-flex items-center justify-center rounded-lg bg-brand/10 p-2">
                        <span class="text-xl">ðŸš€</span>
                    </div>
                    <h3 class="font-display text-base font-semibold text-slate-900">
                        New drops every two weeks
                    </h3>
                    <p class="text-xs leading-relaxed text-slate-600">
                        Each tool is intentionally small, focused, and ready to use in the browser.
                    </p>
                </div>
                <div class="space-y-2">
                    <div class="inline-flex items-center justify-center rounded-lg bg-brand/10 p-2">
                        <span class="text-xl">âš¡</span>
                    </div>
                    <h3 class="font-display text-base font-semibold text-slate-900">
                        No heavy frameworks
                    </h3>
                    <p class="text-xs leading-relaxed text-slate-600">
                        Just Astro, Tailwind, and small JavaScript libraries when they add delight.
                    </p>
                </div>
                <div class="space-y-2">
                    <div class="inline-flex items-center justify-center rounded-lg bg-brand/10 p-2">
                        <span class="text-xl">ðŸ’¡</span>
                    </div>
                    <h3 class="font-display text-base font-semibold text-slate-900">
                        Inspired by Simon Willison
                    </h3>
                    <p class="text-xs leading-relaxed text-slate-600">
                        This project draws inspiration from
                        <a
                            class="font-semibold text-brand-dark underline decoration-brand-dark/30 underline-offset-2 transition hover:text-brand hover:decoration-brand"
                            href="https://tools.simonwillison.net/"
                        >
                            Simon's tools
                            <span aria-hidden="true" class="text-xs">â†—</span>
                        </a>
                        â€” beautifully simple, focused utilities.
                    </p>
                </div>
            </div>
        </section>
    </main>
</Layout>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const searchInput = document.getElementById('tool-search') as HTMLInputElement;
        const toolGrid = document.getElementById('tool-grid') as HTMLElement;
        const emptyState = document.getElementById('empty-state') as HTMLElement;
        const toolCards = document.querySelectorAll('.tool-card') as NodeListOf<HTMLElement>;

        if (!searchInput || !toolGrid || !emptyState) return;

        searchInput.addEventListener('input', (e) => {
            const searchTerm = (e.target as HTMLInputElement).value.toLowerCase().trim();
            let visibleCount = 0;

            toolCards.forEach((card) => {
                const title = card.dataset.toolTitle || '';
                const description = card.dataset.toolDescription || '';

                const titleMatch = title.includes(searchTerm);
                const descriptionMatch = description.includes(searchTerm);
                const isMatch = titleMatch || descriptionMatch;

                if (isMatch || searchTerm === '') {
                    card.style.display = '';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });

            if (visibleCount === 0) {
                toolGrid.classList.add('hidden');
                emptyState.classList.remove('hidden');
            } else {
                toolGrid.classList.remove('hidden');
                emptyState.classList.add('hidden');
            }
        });
    });
</script>
