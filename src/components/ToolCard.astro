---
import type { Tool } from '../data/tools';

interface Props {
    tool: Tool;
}

const { tool } = Astro.props;
---

<a
    href={tool.path}
    class="tool-card group block rounded-xl border border-slate-200/60 bg-white/60 p-4 shadow-sm backdrop-blur-sm transition hover:scale-[1.03] hover:border-brand/50 hover:bg-white/90 hover:shadow-md"
    data-tool-id={tool.id}
    data-tool-title={tool.title.toLowerCase()}
    data-tool-description={tool.description.toLowerCase()}
>
    <div class="flex items-start gap-3">
        <span class="text-2xl" aria-hidden="true">{tool.emoji}</span>
        <div class="flex-1 min-w-0">
            <h2
                class="font-display text-base font-semibold text-slate-900 transition group-hover:text-brand-dark"
            >
                {tool.title}
            </h2>
            <p class="mt-1 text-xs leading-relaxed text-slate-600">
                {tool.description}
            </p>
        </div>
    </div>
</a>
